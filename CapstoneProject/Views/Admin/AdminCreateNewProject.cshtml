@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create an Account</title>
    <link rel="stylesheet" href="@Url.Content("/css/CreateProject.css")">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.css" rel="stylesheet">
    <style>
        .container-wrapper {
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 100vh;
        }

        .form-container {
            flex: 1;
            padding: 2rem;
        }

        .image-container {
            flex: 1;
            background-image: url('@Url.Content("~/images/modern_logo_design.jpg")');
            background-size: cover;
            background-position: center;
            height: 100%;
        }

        .card {
            border-radius: 1rem;
        }

        .note {
            margin-top: 1rem;
            color: red;
            font-weight: bold;
            text-align: center;
        }


    </style>
</head>
<body>
    <div class="container-wrapper">
        <!-- Form Section -->
        <div class="form-container">
            <div class="card">
                <div class="card-body p-5">
                    <h1 class="mb-5 text-center">Create Project Form</h1>
                    <form asp-controller="AdminDash" asp-action="AddNewProject" method="POST">
                        <div class="form-outline mb-4">
                            <input type="text" name="ProjectName" class="form-control" />
                            <label class="form-label" for="form6Example3">Project Name</label>
                        </div>
                        <div class="form-outline mb-4">
                            <textarea class="form-control" name="ProjectDescription" rows="4"></textarea>
                            <label class="form-label" for="form6Example7">Description</label>
                        </div>

                        <button type="submit" class="btn btn-secondary btn-rounded btn-block">Submit Project Proposal!</button>
                    </form>

                    <form asp-controller="AdminDash" asp-action="CancelProject" method="POST"> <button type="submit" class="btn btn-secondary btn-rounded btn-block"> Cancel</button></form>

                </div>

                <!-- Note Section -->
                <div class="note">
                    Please note that the project needs to be reviewed and approved before you can proceed.
                </div>
            </div>
        </div>

        <!-- Image Section -->
        <div class="image-container"></div>
    </div>
</body>
</html>
