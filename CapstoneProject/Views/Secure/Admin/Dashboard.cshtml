@model List<CapstoneProject.Models.ClassLibrary.Project>

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_ClientLayout";
    var userName = "Jeet";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Dashboard - CapstoneProject</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        .user-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin-bottom: 20px;
        }

        .card {
            transition: transform 0.2s;
            border: none;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
            }

        .btn-translucent {
            background-color: rgba(255, 0, 0, 0.7);
            color: white;
            border: none;
        }

            .btn-translucent:hover {
                background-color: rgba(255, 0, 0, 0.9);
                color: #fff;
            }

        .padding-top {
            padding-top: 30px;
        }

        .padding-bottom {
            padding-bottom: 150px;
        }

        h1 {
            color: #A50034;
        }

        .card-title {
            color: #A50034;
        }

        .card-text {
            color: #333;
        }


        .main-container {
            padding-top: 50px;
        }
    </style>
</head>
<body>
    <main class="container pb-3 padding-bottom main-container">
        <div class="text-center">
            <img src="@Url.Content("~/images/User.jpeg")" alt="User Image" class="user-image" />
            <h1>Hey, @userName!</h1>
            <p class="lead">This is a sample user dashboard layout.</p>
        </div>

        <div class="padding-top">
            <div class="row justify-content-center">
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Projects</h5>
                            <p class="card-text">Add new project idea. </p>
                            <a class="btn btn-translucent" asp-area="" asp-controller="Account" asp-action="CreateNewProject">Create Project</a>

                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">View Projects</h5>
                            <p class="card-text">Check all projects.</p>
                            <a class="btn btn-translucent" asp-area="" asp-controller="AdminProject" asp-action="ManageProjects">View Projects</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">View Profiles</h5>
                            <p class="card-text">View a list of all profiles</p>
                            <a class="btn btn-translucent" asp-area="" asp-controller="AdminProfiles" asp-action="ManageProfiles">View Profiles</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mb-5">
            <h3 class="mb-3">Projects To Be Reviewed</h3>
            <div class="table-responsive">
                <table class="table table-striped table-hover shadow-sm">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Submitted By</th>
                            <th>View Project</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* Iterate database data here into table rows *@
                        @* Iterate Database data into table rows *@
                        @* Check if there are any projects to display *@
                        @if (ViewBag.AdminViewProjects != null)
                        {
                            @foreach (var project in ViewBag.AdminViewProjects)
                            {
                                <tr>
                                    <td>@project.ProjectName</td>
                                    <td>@project.ShortDesc</td>
                                    <td>@project.ProjectStatus</td>
                                    <td>@project.Comments</td>
                                    <td><a class="btn btn-translucent" asp-area="" asp-controller="AdminProject" asp-action="ViewAProject" asp-route-ProjectID="@project.ProjectID">View Details</a></td>

                                </tr>
                            }

                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">There are no projects</td>
                            </tr>
                        }

                        @* Additional rows would be added dynamically here *@
                    </tbody>
                </table>
            </div>
        </div>

        <div>
            <h3 class="mb-3">Profiles To Be Reviewed</h3>
            <div class="table-responsive">
                <table class="table table-striped table-hover shadow-sm">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Organization</th>
                            <th>View Profile</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* Iterate database data here into table rows *@
                        <tr>
                            <td>Jeet</td>
                            <td>Jeet@JP.com</td>
                            <td>JP Morgan</td>
                            <td><a href="#" class="btn btn-translucent">View Profile</a></td>
                        </tr>
                        @* Additional rows would be added dynamically here *@
                    </tbody>
                </table>
            </div>
        </div>
    </main>

</body>
</html>
